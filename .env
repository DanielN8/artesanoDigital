# Configuración de la aplicación
APP_NAME="Artesano Digital"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Configuración de base de datos
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=artesano_digital
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Configuración de sesión
SESSION_LIFETIME=120
SESSION_EXPIRE=7200
SESSION_ENCRYPT=false
SESSION_DRIVER=file

# Configuración de mail (para recuperación de contraseñas)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@artesanodigital.com
MAIL_FROM_NAME="Artesano Digital"

# Configuración de uploads
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880
